<% if (errors.length > 0) { %> <!--colocou o .length p sÃ³ mostrar o erro quando tiver um-->
<div class="row">
    <div class="col my-3">
        <div class="alert alert-danger">
            <% errors.forEach(erro => { %>
                <%= erro %><br>
            <% }); %>
        </div>
    </div>
</div>
<% } %>


<% if (success.length > 0) { %> 
<div class="row">
    <div class="col my-3">
        <div class="alert alert-success">
            <% success.forEach(success => { %>
                <%= success %><br>
            <% }); %>
        </div>
    </div>
</div>
<% } %>


